<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="56dp" android:padding="12dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:src="@drawable/ic_label_black_24dp"/>
<TextView
    android:layout_weight="1"
    android:id="@+id/tv_ModifiedNoteLabel_note_title"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:textColor="@android:color/black"
    android:text="Title"
    android:textSize="16sp"
    android:gravity="center_vertical"
    android:lines="1"
    android:textStyle="bold"
    android:layout_marginStart="5dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:id="@+id/ll_btn_delete_note_label">
        <ImageView
            android:contentDescription="Icon Delete"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_delete_black_24dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>